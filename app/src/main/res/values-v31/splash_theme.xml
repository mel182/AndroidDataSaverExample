<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">900</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- API 31+ specific attributes -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>
<!--        <item name="android:windowSplashScreenBrandingImage"/>-->
    </style>
</resources>