<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    showAsAction: -->
    <!--    'always' = Forces the menu item to always be displayed as an action on the app bar -->
    <!--    'ifRoom' = Indicates that the menu should be displayed as an action provided there
                       is enough space in the app bar to display it. It is a good practice to use
                       option in preference to 'always' giving the system flexibility when displaying
                       actions. -->
    <!--    'never' = The default value, which ensures the Menu Item is only shown in the overflow menu. -->

    <item
        android:id="@+id/settings_menu"
        android:title="Settings"
        android:icon="@drawable/ic_baseline_settings"
        app:showAsAction="always"/>

    <item
        android:id="@+id/about_menu"
        android:icon="@drawable/ic_baseline_crop_free"
        android:title="About"
        app:showAsAction="always"/>
</menu>