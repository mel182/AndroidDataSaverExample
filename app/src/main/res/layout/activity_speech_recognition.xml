<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".speech_recognition_example.SpeechRecognitionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/speech_recognition_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Status"
            android:textSize="18sp"
            android:contentDescription="pick speech recognition text"/>

        <Button
            android:id="@+id/speech_recognition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local"
            android:contentDescription="pick speech recognition button"/>

        <Button
            android:id="@+id/speech_recognition_web_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web"
            android:contentDescription="pick speech recognition web button"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>