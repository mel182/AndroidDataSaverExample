<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/append_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="storage append mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/private_mode_button" />

    <Button
        android:id="@+id/private_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="storage private mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/battery_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/append_mode_button"/>

    <Button
        android:id="@+id/wifi_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battery_state_button"/>

    <Switch
        android:id="@+id/broadcast_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast enabled"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="287dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifi_check"/>


    <TextView
        android:id="@+id/wifi_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>