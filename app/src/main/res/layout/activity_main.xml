<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/custom_view_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom view" />

            <Button
                android:id="@+id/compound_view_control_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compound control view" />

            <Button
                android:id="@+id/resource_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resource test" />

            <Button
                android:id="@+id/earth_quake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earth quack test" />

            <Button
                android:id="@+id/data_binding_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data binding test" />

            <Button
                android:id="@+id/data_binding_list_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data binding list example" />

            <Button
                android:id="@+id/private_mode_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="storage private mode" />

            <Switch
                android:id="@+id/broadcast_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Broadcast enabled" />

            <Button
                android:id="@+id/animation_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animation test" />

            <com.example.datasaverexampleapp.customTextview.FontTextView
                android:id="@+id/wifi_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!" />

            <Button
                android:id="@+id/append_mode_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="storage append mode" />

            <Button
                android:id="@+id/wifi_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi check" />

            <Button
                android:id="@+id/battery_state_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery state" />

            <Button
                android:id="@+id/scroll_view_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scroll view test" />

            <Button
                android:id="@+id/intent_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intent test" />

            <Button
                android:id="@+id/coroutine_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coroutine example" />

            <Button
                android:id="@+id/flow_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concurrency flow example" />

            <Button
                android:id="@+id/mvvm_coroutines_flow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MVVM Coroutines Flow example" />

            <Button
                android:id="@+id/storage_manager_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage manager example" />

            <Button
                android:id="@+id/room_database_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room database example" />

            <Button
                android:id="@+id/protocol_oriented_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protocol Oriented Example" />

            <Button
                android:id="@+id/firebase_real_time_database_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firebase RealTime database example" />

            <Button
                android:id="@+id/content_provider_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content provider example" />

            <Button
                android:id="@+id/background_task_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background task example" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>